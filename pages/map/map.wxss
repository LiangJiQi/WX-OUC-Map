/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.background{
  background-image: url(https://ss0.bdstatic.com/70cFuHSh_Q1YnxGkpoWK1HF6hhy/it/u=3766885406,2990292942&fm=27&gp=0.jpg);
  background-size: cover;
}

.showMapData{
  font-weight: bold;
  color: #909090;
  display: flex;
  align-content: center;
  justify-content: center;
}

.titleCentent{
  width: 100%;
  display: flex;
  align-content: center;
  justify-content: center;
}

.dataTitle{
  width: 85%;
  background:#A8EFFB;
  color: #A0A0A0;
  display: flex;
  border: 1px solid lightgray;
  border-radius: 15px;
  align-content: center;
  justify-content: center;
}

.map{
  width: 100%;
  border: 1px solid lightgray;
}